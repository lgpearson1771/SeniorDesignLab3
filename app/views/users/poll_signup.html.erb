<H1><%=@poll_name%></H1>
<%= @poll %>

<div class="grid-container">
  <% row = 1 %>
  <div></div>
  <% (@min_time..(@max_time-15)).step(15) do |time| %>
    <div class = "item" style='border-right: solid; border-right-color: #A2C1C4DD; grid-column: 1 / span 1; grid-row:<% row +1%> / span 1;'>
      <%=  UsersController.print_time(time) %> - <%=  UsersController.print_time(time+15) %>
      <% row = row + 1 %>
    </div>
  <% end %>


  <% col = 1 %>
  <% @calendar.each do |date, date_times| %>

    <div class='item' style='border-bottom: solid; border-bottom-color: #A2C1C4DD; grid-column: <%= col + 1 %> / span 1; grid-row:1 / span 1;'>
      <%= date %>
    </div>
    <% col = col + 1 %>
    <% if ! date_times[:times].nil? %>
      <% date_times[:times].each do |time| %>
        <div class = "item " style='<%="box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);border-radius: 2px;" unless time[:id].nil? %><%="background: #A2C1C4DD;" if time[:id].nil? && time[:row].even? %><%="background: white;" if time[:id].nil? && time[:row].odd? %>grid-column: <%= time[:column] %> / span 1; grid-row:<%= time[:row] %> / span <%= time[:duration] %>;'>
          <%=  time[:id] %>
        </div>

      <% end %>

    <% end %>

  <% end %>
</div>
