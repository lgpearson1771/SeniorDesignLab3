<style>
  body,
  html {
    margin: 0;
    height: 100%;
  }
</style>

<!--https://codepen.io/Tbgse/pen/JXrJGX-->
<div class='bold-line'></div>
<div class='container'>
  <div class='window'>
    <div class='overlay'></div>
    <div class='content'>
      <div class='welcome'><%= @title %> Sign In</div>


      <div class='input-fields'>
        <%= form_tag( "/users/login/#{params[:id]}", {method: :post}) do %>
          <%= text_field_tag(:email, nil, :placeholder => "Email", :class => "input-line full-width" ) %>
          <br>
          <div style="text-align: center; font-size: large">
            <% if flash[:notice]%>
              <div class="notice" style="margin-bottom: 10px; margin-top: 0px; background-color:rgba(0,0,0,0); color: #3e9941;">
                <%= flash[:notice]%>
              </div>
            <% elsif flash[:warning]%>
              <div class="warning" style="margin-bottom: 10px; margin-top: 0px; background-color:rgba(0,0,0,0); color: #d53131;">
                <%= flash[:warning]%>
              </div>
            <% end %>
          </div>
          <%= submit_tag("Login", id: :login, class: 'ghost-round full-width', style: "background: transparent") %>
        <% end %>

      </div>
    </div>
  </div>
</div>
