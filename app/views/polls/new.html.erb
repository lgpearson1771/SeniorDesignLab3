<%#= render :layout => "layouts/popup" , :locals => {:title => 'some title'} do%>
<div id="new_medicine_page_id">
  <% provide(:title, "Create Poll") %>

  <h1>Add Inventory</h1>
  <div class="styled_form" style>
    <%= form_tag( "/polls", :method => :post, :id => 'add_new_poll') do %>
      <%= label(:title_label, "Title") %>
      <%= text_field(:poll, :title, :placeholder => "enter your poll name here", :class => "ALEX_CHANGE") %>

      <%= label_tag(:description_label, "Description") %>
      <%= text_field(:poll, :scientific_name, :placeholder => "The poll description...", :class => "ALEX_CHANGE") %>

      <%= label_tag(:user_votes_label, "Number of User Votes") %>
      <%= text_field(:poll, :quantity, :class => "ALEX_CHANGE") %>

      <%= label_tag(:votes_per_timeslot, "Votes per Timeslot") %>
      <%= text_field(:poll, :student, :class => "ALEX_CHANGE") %>
      <%= select(:poll, :timezone, [ ['Eastern (UTC-05:00)', 0],
                                     ['Central (UTC-06:00)', 1],
                                     ['Mountain (UTC-07:00)', 2],
                                     ['Pacific (UTC-08:00)', 3],
                                     ['Alaskan (UTC-09:00)', 4],
                                     ['Hawaiian (UTC-10:00)', 5]]) %>
      <br>
      <br>
      <%= submit_tag("Create!",  name: "create_poll_button", :class => "ALEX_CHANGE", id: "create_poll_button") %>
    <% end %>
  </div>
</div>

<%# end %>
